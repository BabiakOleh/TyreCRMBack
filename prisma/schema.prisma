generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum OrderType {
  PURCHASE
  SALE
}

enum OrderStatus {
  DRAFT
  CONFIRMED
  COMPLETED
  CANCELLED
}

enum StockMovementType {
  IN
  OUT
}

enum ReceivableStatus {
  OPEN
  PARTIAL
  PAID
  OVERDUE
}

enum CounterpartyType {
  CUSTOMER
  SUPPLIER
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  createdAt DateTime  @default(now())
  products  Product[]
}

model Product {
  id             String          @id @default(cuid())
  name           String
  unitId         String?
  unit           Unit?           @relation(fields: [unitId], references: [id])
  categoryId     String
  category       Category        @relation(fields: [categoryId], references: [id])
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  stockMovements StockMovement[]
  orderItems     OrderItem[]
  tireDetails    TireProduct?
  autoDetails    AutoProduct?
}

model TireProduct {
  id              String          @id @default(cuid())
  productId       String          @unique
  product         Product         @relation(fields: [productId], references: [id])
  brandId         String
  brand           TireBrand       @relation(fields: [brandId], references: [id])
  modelId         String
  model           TireModel       @relation(fields: [modelId], references: [id])
  size            String
  speedIndexId    String
  speedIndex      TireSpeedIndex  @relation(fields: [speedIndexId], references: [id])
  loadIndexId     String
  loadIndex       TireLoadIndex   @relation(fields: [loadIndexId], references: [id])
  isXL            Boolean         @default(false)
  isRunFlat       Boolean         @default(false)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model AutoProduct {
  id           String   @id @default(cuid())
  productId    String   @unique
  product      Product  @relation(fields: [productId], references: [id])
  brand        String
  model        String
  subcategoryId String
  subcategory  AutoSubcategory @relation(fields: [subcategoryId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Unit {
  id        String    @id @default(cuid())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
}

model AutoSubcategory {
  id        String        @id @default(cuid())
  name      String        @unique
  products  AutoProduct[]
  createdAt DateTime      @default(now())
}

model TireBrand {
  id        String     @id @default(cuid())
  name      String     @unique
  models    TireModel[]
  tireProducts TireProduct[]
  createdAt DateTime   @default(now())
}

model TireModel {
  id        String    @id @default(cuid())
  name      String
  brandId   String
  brand     TireBrand @relation(fields: [brandId], references: [id])
  tireProducts TireProduct[]
  createdAt DateTime  @default(now())

  @@unique([name, brandId])
}

model TireSpeedIndex {
  id      String   @id @default(cuid())
  code    String   @unique
  maxKph  Int
  tireProducts TireProduct[]
}

model TireLoadIndex {
  id      String   @id @default(cuid())
  code    String   @unique
  maxKg   Float
  tireProducts TireProduct[]
}

model Supplier {
  id        String   @id @default(cuid())
  name      String
  phone     String?
  email     String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Customer {
  id         String       @id @default(cuid())
  name       String
  phone      String?
  email      String?
  isActive   Boolean      @default(true)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  orders     Order[]
  receivable Receivable[]
}

model Counterparty {
  id        String           @id @default(cuid())
  type      CounterpartyType
  name      String
  phone     String
  email     String?
  taxId     String?
  address   String?
  note      String?
  isActive  Boolean          @default(true)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@index([type, isActive])
  @@index([name])
  @@index([phone])
}

model Order {
  id          String       @id @default(cuid())
  type        OrderType
  status      OrderStatus  @default(DRAFT)
  orderDate   DateTime     @default(now())
  supplierId  String?
  customerId  String?
  supplier    Supplier?    @relation(fields: [supplierId], references: [id])
  customer    Customer?    @relation(fields: [customerId], references: [id])
  totalCents  Int          @default(0)
  items       OrderItem[]
  stockMoves  StockMovement[]
  receivables Receivable[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model OrderItem {
  id         String   @id @default(cuid())
  orderId    String
  productId  String
  quantity   Int
  priceCents Int
  order      Order    @relation(fields: [orderId], references: [id])
  product    Product  @relation(fields: [productId], references: [id])
}

model StockMovement {
  id         String            @id @default(cuid())
  productId  String
  type       StockMovementType
  quantity   Int
  orderId    String?
  createdAt  DateTime          @default(now())
  product    Product           @relation(fields: [productId], references: [id])
  order      Order?            @relation(fields: [orderId], references: [id])
}

model Receivable {
  id          String           @id @default(cuid())
  customerId  String
  orderId     String?
  amountCents Int
  paidCents   Int              @default(0)
  dueDate     DateTime
  status      ReceivableStatus @default(OPEN)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  customer    Customer         @relation(fields: [customerId], references: [id])
  order       Order?           @relation(fields: [orderId], references: [id])
}
